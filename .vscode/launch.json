{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ShoppingListService.WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/ShoppingListService.WebApi/bin/Debug/netcoreapp2.0/ShoppingListService.WebApi.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/ShoppingListService.WebApi",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            }
        }
    ]
}